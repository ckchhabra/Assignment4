<div class="row  table-responsive">
    <div class="col-md-12">
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>

        <br>
        <h2>Courses</h2>
        <hr />
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>Course Code</th>
                    <th>Course Description</th>

                </tr>
            </thead>
            <tbody>
                {{#each courses}}
                <tr>
                    <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>

                    <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
                </tr>
                {{/each}}

            </tbody>
        </table>

    </div>
</div>